<div class="container">
    <div class="jumbotron text-center">
    <img src="/assets/img/CheeseBurger.png">
    <h1>Eat Da Burger!</h1>
    </div>

    <div class="row">
        <ul class="col-md-4 col-md-offset-1">
        <h2 class="text-center">Burgers to eat</h2>
        {{#each burgers}}
            {{#unless this.devoured}}
            <li>
                {{this.id}}  {{this.burger_name}}         
            </li>
                <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="true">
                <button type="submit" class="btn-devour">Devour it!</button>
                </form>
            {{/unless}}
        {{/each}}
        </ul>

        <ul class="col-md-4 col-md-offset-2">
        <h2 class="text-center">Burgers already eaten</h2>
        {{#each burgers}}
            {{#if this.devoured}}
            <li>
                {{this.id}}  {{this.burger_name}}
            </li>
            {{/if}}
        {{/each}}
        </ul>
    </div><!-- Burger row -->
    <div class="row">
        <div class="col-md-5 col-md-offset-3 col-sm-12">
            <form action="/" method="POST">
                <div class="form-group">
                    <input type="textarea" id="burger" name="burger_name" pattern="^\w+(?:[.' ]*\w+)*$" required>
                </div>
                <button type="submit" class="btn btn-danger btn-lg">Submit</button>
            </form>
            <h4 class="text-center">Enter the burger that you would like to eat and click the "Submit" button!</h4>
        </div>
    </div><!-- Form row -->
</div><!-- Container row -->
